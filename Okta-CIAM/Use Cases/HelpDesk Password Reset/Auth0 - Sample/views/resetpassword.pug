extends layout
block content
    div.text-center
        form(class="form-signin" method="POST" action="/resetpassword")
            #error
                if error
                    p.text-danger Error!!!
            <br><br>
            - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
            if otpvalid
                h1(class=h1Classes) Initiate Password Reset
                <br><br>
                - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
                - var buttonStyle = {display: block, margin:'auto', width: '10%'};
                button(class=buttonClass type="submit" style=buttonStyle) Reset
            else
                h1(class=h1Classes) OTP not verified
            - var pClasses=['mt-5', 'mb-3', 'text-muted'];
            p(class=pClasses)