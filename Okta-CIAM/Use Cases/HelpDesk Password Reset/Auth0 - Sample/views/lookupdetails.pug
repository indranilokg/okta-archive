extends layout
block content
    div.text-center
        form(class="form-signin" method="POST" action="/genotp")
            #error
                if error
                    p.text-danger Error!!!
            <br><br>
            - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
            h1(class=h1Classes) Validate User data
            <br><br>
             - var textStyle = {display: block, margin:'auto', width: '25%'};
            <span style=textStyle>Email: #{user.email}</span>
            <br><br>
            <span style=textStyle>Nickname: #{user.nickname}</span>
            <br><br>
            <span style=textStyle>Phone: #{user.user_metadata.telephone}</span>
            <br><br>
            <span style=textStyle>Addess: #{user.user_metadata.address}</span>
            <br><br>
            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            - var buttonStyle = {display: block, margin:'auto', width: '12%'};
            button(class=buttonClass type="submit" style=buttonStyle) Generate OTP
            - var pClasses=['mt-5', 'mb-3', 'text-muted'];
            p(class=pClasses)